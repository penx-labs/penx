{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm with-env next dev --turbopack --port 4000",
    "build": "npm run lingui:extract && next build",
    "lingui": "pnpm run lingui:extract",
    "lingui:extract": "lingui extract --clean",
    "lint": "next lint",
    "lint:fix": "next lint --fix && prettier --write . --log-level warn",
    "preview": "next build && next start",
    "deploy": "docker-compose -p penx -f docker-compose.yaml up --build -d",
    "format:write": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "format": "prettier \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "start": "next start -p 4000",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@penx/api": "workspace:*",
    "@penx/trpc-client": "workspace:*",
    "@penx/types": "workspace:*",
    "@penx/emitter": "workspace:*",
    "@penx/hooks": "workspace:*",
    "@penx/constants": "workspace:*",
    "@penx/components": "workspace:*",
    "@penx/query-client": "workspace:*",
    "@penx/session": "workspace:*",
    "@penx/model": "workspace:*",
    "@penx/local-db": "workspace:*",
    "@penx/store": "workspace:*",
    "@penx/contexts": "workspace:*",
    "@penx/services": "workspace:*",
    "@penx/unique-id": "workspace:*",
    "@penx/db": "workspace:*",
    "@penx/uikit": "workspace:*",
    "@penx/editor": "workspace:*",
    "@penx/utils": "workspace:*",
    "@penx/libs": "workspace:*",
    "@penx/encryption": "workspace:*",
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.6.0",
    "@uiw/react-color": "^2.4.5",
    "@uploadthing/react": "7.1.0",
    "@upstash/ratelimit": "^0.4.4",
    "@vanilla-extract/css": "^1.16.1",
    "@vercel/blob": "^0.15.0",
    "@vercel/kv": "^1.0.1",
    "@vercel/postgres": "^0.5.1",
    "next": "^15.3.0"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.311",
    "@iconify/tailwind4": "^1.0.4",
    "@lingui/cli": "5.3.1",
    "@lingui/loader": "5.3.1",
    "@lingui/swc-plugin": "5.5.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "4.0.17",
    "@tailwindcss/typography": "^0.5.16",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/parser": "^8.23.0",
    "@vanilla-extract/next-plugin": "^2.4.10",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "dotenv-cli": "^7.3.0",
    "encoding": "^0.1.13",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-perfectionist": "4.8.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.4",
